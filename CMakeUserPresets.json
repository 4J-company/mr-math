{
  "version": 3,
  "configurePresets": [
    {
      "name": "custom-base",
      "description": "Put here parameters for your custom confiurations",
      "hidden": true,
      "inherits": [ "base" ]
    },
    {
      "name": "gcc-base",
      "hidden": true,
      "inherits": [ "custom-base" ],
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "gcc-release",
      "displayName": "GCC Release",
      "inherits": [ "gcc-base", "release", "build-all" ]
    },
    {
      "name": "gcc-debug",
      "displayName": "GCC Debug",
      "inherits": [ "gcc-base", "debug", "build-all" ]
    },
    {
      "name": "msvc-base",
      "hidden": true,
      "inherits": [ "custom-base" ],
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },
    {
      "name": "msvc-release",
      "displayName": "MSVC Release",
      "inherits": [ "msvc-base", "release", "build-all" ]
    },
    {
      "name": "msvc-debug",
      "displayName": "MSVC Debug",
      "inherits": [ "msvc-base", "debug", "build-all" ]
    }
  ],
  "buildPresets": [
    {
      "name": "gcc-release",
      "displayName": "GCC Release",
      "configurePreset": "gcc-release"
    },
    {
      "name": "gcc-debug",
      "displayName": "GCC Debug",
      "configurePreset": "gcc-debug"
    },
    {
      "name": "msvc-release",
      "displayName": "MSVC Release",
      "configurePreset": "msvc-release"
    },
    {
      "name": "msvc-debug",
      "displayName": "MSVC Debug",
      "configurePreset": "msvc-debug"
    }
  ]
}
